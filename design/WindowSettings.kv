#:kivy 2.0.0

# импорт hex цветов
#:import hex kivy.utils.get_color_from_hex

# Модальное (всплывающе) окно калькулятора - History
<WindowSettings@ModalView>:
    # размер виджета (окна)
    size_hint: 0.9, 0.9

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            # растояние между границей и вложенными виджетами 
            # padding: [0,5,0,0]
            Label:
                text: 'SETTINGS'
                # размер шрифта
                font_size: '30sp'
                bold: True
                halign: 'center'
                valign: 'top'
        BoxLayout:
            Label:
                text: 'ROUNDING NUMBERS'
                halign: 'center'
                valign: 'top'
        BoxLayout:
            orientation: 'horizontal'
            # растояние между границей и вложенными виджетами 
            # padding: [10,0,20,0]
            BoxLayout:
                # размер виджета
                size_hint: 0.8, 1
                # растояние между границей и вложенными виджетами 
                padding: [10,0,10,0]
                Slider:
                    id: slider_round
                    min: 0
                    max: 10
                    value: 2
                    step: 1
                    orientation: 'horizontal'
            BoxLayout:
                # размер виджета
                size_hint: 0.2, 1
                # растояние между границей и вложенными виджетами 
                padding: [0,0,20,0]
                Label:
                    # присвоение значения slider в label
                    text: '{}'.format(int(slider_round.value))
                    # размер шрифта
                    font_size: '30sp'
                    # жирность шрифта
                    bold: True
                    # горизонтальное выравнивание
                    halign: 'center'
                    # вертикальное выравнивание
                    valign: 'top'
        BoxLayout:
            Label:
                text: 'HISTORY LENGTH'
                halign: 'center'
                valign: 'top'
        BoxLayout:
            orientation: 'horizontal'
            # растояние между границей и вложенными виджетами 
            # padding: [10,0,20,0]
            BoxLayout:
                # размер виджета
                size_hint: 0.8, 1
                # растояние между границей и вложенными виджетами 
                padding: [10,0,10,0]
                Slider:
                    id: slider_hist
                    min: 0
                    max: 999
                    value: 999
                    step: 1
                    orientation: 'horizontal'
            BoxLayout:
                # размер виджета
                size_hint: 0.2, 1
                # растояние между границей и вложенными виджетами 
                padding: [0,0,20,0]
                Label:
                    # присвоение значения slider в label
                    text: '{}'.format(int(slider_hist.value))
                    # размер шрифта
                    font_size: '30sp'
                    # жирность шрифта
                    bold: True
                    # горизонтальное выравнивание
                    halign: 'center'
                    # вертикальное выравнивание
                    valign: 'top'
        BoxLayout:
            # размер виджета
            # size_hint: 1, 0.3
            # растояние между границей и вложенными виджетами 
            padding: [10,0,10,10]
            Button:
                text: 'CLOSE'
                # размер шрифта
                font_size: '30sp'
                bold: True
                on_release: root.dismiss()