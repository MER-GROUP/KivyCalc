# Settings - настройки программы через json
#:import settings Settings.Settings

# Модальное (всплывающе) окно калькулятора - Settings
<WindowSettings@ModalView>:
    # размер виджета (окна)
    size_hint: 0.9, 0.9

    BoxLayout:
        orientation: 'vertical'
        # -----------------------------------------------------------------
        BoxLayout:
            # растояние между границей и вложенными виджетами 
            # padding: [0,5,0,0]
            Label:
                text: 'SETTINGS'
                # размер шрифта
                font_size: '30sp'
                bold: True
                halign: 'center'
                valign: 'top'
        # -----------------------------------------------------------------
        BoxLayout:
            Label:
                text: 'ROUNDING NUMBERS'
                # размер шрифта
                font_size: '20sp'
                halign: 'center'
                valign: 'top'
        # -----------------------------------------------------------------
        BoxLayout:
            orientation: 'horizontal'
            # растояние между границей и вложенными виджетами 
            # padding: [10,0,20,0]
            BoxLayout:
                # размер виджета
                size_hint: 0.8, 1
                # растояние между границей и вложенными виджетами 
                padding: [10,0,10,0]
                Slider:
                    id: slider_round
                    min: 0
                    max: 10
                    # value: 2
                    # value: int(app.setting_round)
                    value: int(settings().load_settings()['round'])
                    step: 1
                    orientation: 'horizontal'
            BoxLayout:
                # размер виджета
                size_hint: 0.2, 1
                # растояние между границей и вложенными виджетами 
                padding: [0,0,20,0]
                Label:
                    # присвоение значения slider в label
                    text: '{}'.format(int(slider_round.value))
                    # размер шрифта
                    font_size: '30sp'
                    # жирность шрифта
                    bold: True
                    # горизонтальное выравнивание
                    halign: 'center'
                    # вертикальное выравнивание
                    valign: 'top'
        # -----------------------------------------------------------------
        BoxLayout:
            Label:
                text: 'HISTORY LENGTH'
                # размер шрифта
                font_size: '20sp'
                halign: 'center'
                valign: 'top'
        # -----------------------------------------------------------------
        BoxLayout:
            orientation: 'horizontal'
            # растояние между границей и вложенными виджетами 
            # padding: [10,0,20,0]
            BoxLayout:
                # размер виджета
                size_hint: 0.8, 1
                # растояние между границей и вложенными виджетами 
                padding: [10,0,10,0]
                Slider:
                    id: slider_hist
                    min: 0
                    max: 999
                    # value: 999
                    # value: int(app.setting_hist)
                    value: int(settings().load_settings()['hist'])
                    step: 1
                    orientation: 'horizontal'
            BoxLayout:
                # размер виджета
                size_hint: 0.2, 1
                # растояние между границей и вложенными виджетами 
                padding: [0,0,20,0]
                Label:
                    # присвоение значения slider в label
                    text: '{}'.format(int(slider_hist.value))
                    # размер шрифта
                    font_size: '30sp'
                    # жирность шрифта
                    bold: True
                    # горизонтальное выравнивание
                    halign: 'center'
                    # вертикальное выравнивание
                    valign: 'top'
        # -----------------------------------------------------------------
        BoxLayout:
            # размер виджета
            size_hint: (1, 1) if app.is_android else (None, None)          
            width: 0
            height: 0
            Label:
                text: 'VIBRATION RESPONSE' if app.is_android else ''
                # размер шрифта
                font_size: '20sp'
                halign: 'center'
                valign: 'top'
        # -----------------------------------------------------------------
        BoxLayout:
            orientation: 'horizontal'
            # размер виджета
            size_hint: (1, 1) if app.is_android else (None, None)          
            width: 0
            height: 0
            BoxLayout:
                # размер виджета
                size_hint: (0.8, 1) if app.is_android else (None, None)          
                width: 0
                height: 0
                # растояние между границей и вложенными виджетами 
                # padding: [10,0,10,0]
                padding: [10,0,10,0] if app.is_android else [0,0,0,0]
                Slider:
                    id: slider_vibro
                    opacity: 1.0 if app.is_android else 0.0
                    disabled: False if app.is_android else True
                    min: 0
                    max: 1
                    # value: 0.4
                    # value: float(app.setting_vibro)
                    value: float(settings().load_settings()['vibro'])
                    step: 0.1
                    orientation: 'horizontal'
            BoxLayout:
                # размер виджета
                size_hint: (0.2, 1) if app.is_android else (None, None)          
                width: 0
                height: 0
                # растояние между границей и вложенными виджетами 
                # padding: [0,0,20,0]
                padding: [0,0,20,0] if app.is_android else [0,0,0,0]
                Label:
                    # присвоение значения slider в label
                    # text: '{}'.format(dec(slider_vibro.value)) if app.is_android else ''
                    text: '{}'.format(dec(slider_vibro.value).quantize(dec('1.0'))) if app.is_android else ''
                    # размер шрифта
                    font_size: '30sp'
                    # жирность шрифта
                    bold: True
                    # горизонтальное выравнивание
                    halign: 'center'
                    # вертикальное выравнивание
                    valign: 'top'
        # -----------------------------------------------------------------
        BoxLayout:
            # растояние между границей и вложенными виджетами
            padding: [10,5,10,5]
            Button:
                id: 'button_clear'
                text: 'CLEAR HISTORY'
                # размер шрифта
                font_size: '20sp'
                bold: True 
                disabled: True   
        # -----------------------------------------------------------------               
        BoxLayout:
            # размер виджета
            # size_hint: 1, 0.3
            # растояние между границей и вложенными виджетами 
            padding: [10,0,10,10]
            Button:
                text: 'CLOSE'
                # размер шрифта
                font_size: '30sp'
                bold: True
                # обновление настроек
                on_release: settings().update_settings(round=str(int(slider_round.value)), hist=str(int(slider_hist.value)), vibro=str(float(slider_vibro.value)))
                # закрыть модальное окно
                on_release: root.dismiss()
        # -----------------------------------------------------------------