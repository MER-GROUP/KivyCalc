#:kivy 2.0.0

# импорт hex цветов
#:import hex kivy.utils.get_color_from_hex

# Модальное (всплывающе) окно калькулятора - Settings
<WindowSettings@ModalView>:
    # размер виджета (окна)
    size_hint: 0.9, 0.9

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            # растояние между границей и вложенными виджетами 
            padding: [0,5,0,0]
            BoxLayout:
                # размер виджета
                size_hint: 1, 0.2
                Label:
                    text: 'SETTINGS'
                    bold: True
                    # автоматически переносить/растягивать текст {
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    # автоматически переносить/растягивать текст }
            BoxLayout:
                orientation: 'vertical'
                # размер виджета
                size_hint: 1, 0.3
                Label:
                    text: 'rounding numbers'
                    bold: False
                    # автоматически переносить/растягивать текст {
                    text_size: self.size
                    halign: 'center'
                    valign: 'top'
                    # автоматически переносить/растягивать текст }
                BoxLayout:
                    orientation: 'horizontal'
                    # растояние между границей и вложенными виджетами 
                    padding: [10,0,20,0]
                    BoxLayout:
                        # размер виджета
                        size_hint: 0.8, 0.2
                        # растояние между границей и вложенными виджетами 
                        padding: [0,0,10,0]
                        Slider:
                            id: slider
                            min: 0
                            max: 999
                            value: 2
                            step: 1
                            orientation: 'horizontal'
                    BoxLayout:
                        size_hint: 0.2, 0.2
                        Label:
                            # присвоение значения slider в label
                            text: '{}'.format(int(slider.value))
                            # размер шрифта
                            font_size: '30sp'
                            # жирность шрифта
                            bold: True
                            # горизонтальное выравнивание
                            # halign: 'left'
            BoxLayout:
        BoxLayout:
            # размер виджета
            size_hint: 1, 0.3
            # растояние между границей и вложенными виджетами 
            padding: 10
            Button:
                text: 'CLOSE'
                # размер шрифта
                font_size: '30sp'
                on_release: root.dismiss()