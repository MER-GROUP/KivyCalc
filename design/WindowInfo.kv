#:kivy 2.0.0

# импорт hex цветов
#:import hex kivy.utils.get_color_from_hex

# Модальное (всплывающе) окно калькулятора - Info
<WindowInfo@ModalView>:
    # размер виджета (окна)
    size_hint: 0.9, 0.9

    BoxLayout:
        orientation: 'vertical'
        # -----------------------------------------------------------------
        BoxLayout:
            # размер виджета
            size_hint: (1, 0.15) if app.is_android else (1, 0.2)
            # растояние между границей и вложенными виджетами 
            # padding: [0,5,0,0]
            Label:
                text: 'INFO'
                # размер шрифта
                font_size: '30sp'
                bold: True
                halign: 'center'
                valign: 'top'
        # -----------------------------------------------------------------   
        BoxLayout:
            Label:
                text: 'РАЗРАБОТЧИК И АВТОР:\n Максим Романенко (Red Alert) \n\nПРОГРАММНОЕ ОБЕСПЕЧЕНИЕ:\n свободное\n\nИНСТРУМЕНТЫ РАЗРАБОТКИ:\n python (python.org)\n kivy (kivy.org)\n git (git-scm.com)\n vscode (code.visualstudio.com)\n debian (debian.org)\n\nКОНТАКТЫ:\n i@mer-group.ru\n github.com/mer-group' 
                # размер шрифта
                font_size: '20sp' if app.is_android else '10sp'
                halign: 'center'
                valign: 'top'       
        # -----------------------------------------------------------------               
        BoxLayout:
            # размер виджета
            size_hint: (1, 0.15) if app.is_android else (1, 0.2)
            # растояние между границей и вложенными виджетами 
            padding: [10,0,10,10]
            Button:
                text: 'CLOSE'
                # размер шрифта
                font_size: '30sp'
                bold: True
                on_release: root.dismiss()
        # -----------------------------------------------------------------