#:kivy 2.0.0

# импорт hex цветов
#:import hex kivy.utils.get_color_from_hex

# Модальное (всплывающе) окно калькулятора - History
<WindowHistory@ModalView>:
    # размер виджета (окна)
    size_hint: 0.9, 0.9

    BoxLayout:
        orientation: 'vertical'
        # -----------------------------------------------------------------
        BoxLayout:
            # растояние между границей и вложенными виджетами 
            # padding: [0,5,0,0]
            Label:
                text: 'HISTORY'
                # размер шрифта
                font_size: '30sp'
                bold: True
                halign: 'center'
                valign: 'top'
        # -----------------------------------------------------------------               
        BoxLayout:
            # размер виджета
            # size_hint: 1, 0.3
            # растояние между границей и вложенными виджетами 
            padding: [10,0,10,10]
            Button:
                text: 'CLOSE'
                # размер шрифта
                font_size: '30sp'
                bold: True
                on_release: root.dismiss()
        # -----------------------------------------------------------------